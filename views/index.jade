extends layout

block content
  div(class='panel')    
    div(class='row')
      div(class='span4')

        div(id='map-all', class='span5')
          div(id="map_canvas", style='width:100%; height:100%')
            


      div(class='offset2 span2')
        fieldset
          legend Ingresa
          form(action='/autenticar', method='post' ,class='form-inline')
            label(for='user')
              input(type='text', id='user', name='user', placeholder='Usuario' ,required)
            label(for='pw')
              input(type='password', id='pw', name='pw', placeholder='Contraseña',required)
            button(class='btn btn-info') Entrar
      
    
      div(class='offset1 span2')
     
        fieldset
          legend Registrate
          form(action='/registro', method='post' ,class='form-inline')
            label(for='n-user')
              input(type='text', id='n-user', name='n_user', placeholder='Usuario', required)
            label(for='n-pw')
              input(type='password', id='n-pw', name='n_pw', placeholder='Contraseña', required)
            label(for='n-email')
              input(type='email', id='n-email', name='n_email', placeholder='Email', pattern="^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$", required)
            button(class='btn btn-info') Registar     
        
        button(class='btn ', id='login' ,href="#r-fb", role="button" , data-toggle="modal") Facebook

        div(class="alert alert-block fade in")
          button(type="button", class="close", data-dismiss="alert") ×
          h4(class="alert-heading")= mensaje


  div(id="r-fb", class="modal hide fade", tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")
    div(class="modal-header")
      button(type="button", class="close", data-dismiss="modal", aria-hidden="true")×
          img(class='image')


    div(class="modal-body")
      form(action='/registro', method='post',class='form-horizontal' )

        div(class="control-group")
          label(for='f-user', class='control-label') Usuario:
          div(class="controls")
            input(type='text', id='f-user', name='f_user', placeholder='Usuario', required)

        div(class="control-group")
          label(for='f-pw' , class='control-label') Contraseña:
          div(class="controls")
            input(type='password', id='f-pw', name='f_pw', placeholder='Contraseña', required)


        div(class="control-group")
          label(for='f-email', class='control-label') Email:
          div(class="controls")
            input(type='email', id='f-email', name='f_email', placeholder='Email', pattern="^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$", required)

        div(class="control-group")
          div(class="controls")
             button(class='btn btn-info') Registar     



        
          
        
  